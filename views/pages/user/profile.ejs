<% layout('layout/boilerplate-user') %>

<!-- FINISHED  -->


    <h2>User Page</h2>
    <div class='info'>
        <p>Display Name: <%= currentUser.username %></p>
        <p>Email: <%= currentUser.email %></p>
    </div>
    <h2>Your Created items</h2>
    <% if (Object.keys(items).length > 1 ) { %>
    <div class="card-group">
        <% for (let item of items){ %>
            <div class="card" style="width: 18rem;">
                <img src=<%= item.images[0].url %> class="card-img-top">
                <div class="card-body">
                  <h5 class="card-title"><%=item.title%></h5>
                  <p class="card-text"><%=item.short%></p>
                  <a href="/itinerary/<%=item._id%>" class="btn btn-primary">View</a>
                </div>
            </div>
        <% } %>
    </div>
        
    <% } else { %>
        <p class="info">You have not created anything.</p>
    <% } %>

    </div>