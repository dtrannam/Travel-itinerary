<% layout('layout/boilerplate') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/item.css">
</head>
<body>
    <h1><%= item.title %> </h1>
    <section>
        <p> Description: <%= item.description %></p>
        <p> Days: <%= item.days %></p>
        <p> Location: <%= item.location %></p>
    </section>
    <ul>
        <% for(let itinerary of item.items) { %>
        <li> <%=  itinerary %> </li>
        <% } %> 
    </ul>
    <section class='buttons'>
    <button class="btn btn-success mb-2"><a id='return' href="/itinerary">Return</a></button>
    <form action="/itinerary/<%= item.id%>?_method=DELETE" method="POST">
        <button class="btn btn-danger mb-2">Delete</button>
    </form>
    <form action="/itinerary/<%= item.id%>/edit" method='PUT'>
        <button  class="btn btn-primary mb-2" >Update</button>
    </form>
    </section>
    
    <% if (item.yelp) { %>
    <h2>Popular foods around the area!</h2>
    <div class="format">
    <% for(let food of item.yelp) { %>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src=<%= food.image_url %>  width='200' height='200'> alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= food.name %></h5>
          <p class="card-text">Rating: <%= food.rating %>/5</p>
          <p class="card-text">Address: <%= food.location.display_address %></p>
          <p class="card-text">Categories: <%= food.categories[0].alias %></p>
          <a href=<%= food.url %> class="btn btn-primary">Go Yelp Page!</a>
        </div>
    </div>
    <% } %>
    <% } %> 
    </div>

    <% if (item.comments) { %>
    <h2>Comments</h2>
    <ul class="list-group list-group-flush">
    <% for(let response of item.comments) { %>
        <li class="list-group-item ">
            <%= response.comment %> by <%= response.name %> on <%= response.date %>
        </li>
    <% } %>
    </ul>
    <% } %>

    <form action="/itinerary/<%= item.id%>/comment/new" method="POST" >
        <div class="form-group">
            <label for="person">Name</label>
            <input class="form-control" type="text" id='person' name='person'>    
        </div>
        <div class="form-group">
            <label for="response">Comment</label>
            <input class="form-control" type="text" id='name' name='response'>    
        </div>
      <input type="submit" value='submit' class="btn btn-primary">
    </form>
</body>
</html>