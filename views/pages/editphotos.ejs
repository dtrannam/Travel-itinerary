<body>
    <h1>Editing pictures on <%= item.title %></h1>
    <section>
        <h2>Add Images</h2>
        <form action="/itinerary/<%= item._id %>/edit_photos/?_method=PUT" method="POST" enctype="multipart/form-data">
            <label class="form-label" for="images">Upload more image(s) to share</label>
            <input class="form-control-file" type="file" name="images" multiple>
            <br>
            <input type="submit" class="btn btn-info">
        </form>
        <h2>Remove Images</h2>
        <form action="/itinerary/<%= item._id %>/edit_photos/?_method=DELETE" method="POST">
            <% for (let i = 0; i < item.images.length; i++) { %>
                <img class="img-thumbnail" style="height: 200px; width: 200px; padding: 5px" src="<%= item.images[i].url %>">
                <input type="checkbox" id=<%= item.images[i]._id%> name='images' value=<%= item.images[i].filename%>>
                <br>
            <% } %>
        <br>
        <input type="submit" class="btn btn-info">
        </form>
        
    </section>
    <br>
    <a href="/itinerary/<%= item._id %>" class='btn btn-success mb-2'>Return</a>
</body>