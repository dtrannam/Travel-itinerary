<% layout('layout/boilerplate') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/viewall.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    <h1>ALL ITEM</h1>

    <% if(success && success.length) {%>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>

    <% if(failure && failure.length) {%>
        <div class="alert alert-danger" role="alert">
            <%= failure %>
        </div>
    <% } %>
<img src="" alt="">
    <div class="format">
        
    <% for(let itinerary of allItinerary) { %>
    <span class="card" style="width: 25%;">
            <% if (itinerary.images.length >= 1) {  %>

            <img src=<%= itinerary.images[0].url %> alt="Card image cap" width='100%' height='50%'>
           
            <% } else {  %>
            
            <img src="/img/sample1.jpg" alt="Card image cap" width='100%' height='50%'>
            <%    }    %>
        <div class="card-body">
        <h5 class="card-title"><%= itinerary.title %></h5>
        <p class="card-text"><%= itinerary.location %></p>
        <p class="card-text"><%= itinerary.short %></p>
        <p class="card-text">Days: <%= itinerary.days %></p>
        <p class="card-text">Best for <%= itinerary.traveler %></p>
        <p class="card-text">Trip Type: <%= itinerary.theme %></p>
        <a href="/itinerary/<%=itinerary._id%>" class="btn btn-primary">View Details</a>  
    </div>
    </span>
    <% } %> 
    </div>
    
</body>
</html>