<% layout('layout/boilerplate') %>
    <body>
        <a href="/">Home</a>
        <a href="/itinerary">View All</a>
        <form action="/create" method="POST" id='newItem'>
         <!-- User Input -->
        <label for="title">Enter a title:    </label>
        <input type="text" id='title' maxlength="20" name='title'>
        <br>
        <label for="location">Enter a location:</label>
        <input type="text" id="location" name='location' maxlength="15">
        <br>
        <label for="description">Enter a short description about this plan:</label>
        <input type="text" maxlength="280" name='description'>
        <br>
        <!-- Predefined Selection for filtering -->
        <label for="traveler">What type of travelers?</label>
        <select name="traveler" id="traveler">
            <option value="Solo">Solo - For travelers who want to indulge in yourself</option>
            <option value="Couples">Couples - For romatic getaways with your significant others</option>
            <option value="Family">Family Friend - For trips with the family who may not be as adventerous</option>
            <option value="Friends">Group Trip - The more the merrier! </option>
            <option value="Mixed">Mixed - Good for anyone! </option>
        </select>
        <br>
        <label for="theme">What's the theme of this trip?</label>
        <select name="theme" id="theme">
            <option value="nature">Nature - From national parks to raging rivers!</option>
            <option value="resort">Resort - </option>
            <option value="urban">Urban</option>
        </select>
        <br>
        <label for="days">Amount of day (Up to 7):</label>
        <select name="days" id='days'>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
        </select>
        <br>
        <br>
        <h3>Information:</h3>
        <section id='daysinput'>
            <label for="1">Day 1</label>
            <input type="text" id='items' name='items'>
        </section>
        <input type="submit">
    </form>
    </body>
    <script src="/Scripts/create.js" async defer></script>
    
</html>